  "repository": {
    "type": "git",
    "url": "https://github.com/jimf/resize-cursors"
  },
  "keywords": [
    "resize",
    "resizable",
    "css",
    "cursor"
  ],
  "author": "Jim Fitzpatrick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimf/resize-cursors/issues"
  },
  "homepage": "https://github.com/jimf/resize-cursors",
  "devDependencies": {
    "coveralls": "^2.11.2",
    "istanbul": "^0.4.1",
    "jshint": "^2.8.0",
    "nodemon": "^1.8.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.0.0"
  }
}
